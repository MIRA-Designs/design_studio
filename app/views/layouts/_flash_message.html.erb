<% if flash[:alert] %>
  <div class="mb-4 px-4 py-3 bg-red-100 border border-red-400 text-red-700 rounded">
    <%= flash[:alert] %>
  </div>
<% elsif flash[:notice] %>
  <div class="mb-4 px-4 py-3 bg-green-100 border border-green-400 text-green-700 rounded">
    <%= flash[:notice] %>
  </div>
<% end %>