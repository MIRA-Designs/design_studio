<% if errors.any? %>
  <div class="form-error-div">
    <h2 class="font-semibold">
      <%= pluralize(errors.count, "error") %> prohibited this <%= record %> from being saved:
    </h2>
    <ul class="mt-2 list-disc pl-5">
      <% errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>