<!-- app/views/layouts/_header.html.erb -->
<header class="bg-grey-500 text-black py-4 shadow-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <%= link_to root_url, class: 'flex items-center space-x-4 pl-4' do %>
        <%= image_tag "logo.png", alt: "DS Logo", class: "w-16 h-16" %> <!-- Replace this with your actual logo -->
        <h1 class="text-2xl font-bold">DS</h1>
      <% end %>
      <!-- Navigation Links with Dropdown -->
      <%= render :partial => 'layouts/navigation_links' %>
      <!-- Search Bar -->
      <div class="flex items-center px-4">
        <input type="text" placeholder="Search..." class="px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-grey-500" />
      </div>
      <!-- Profile, Wishlist, Cart Links with Icons -->
      <div class="flex items-center space-x-6 pr-4">
        <% if current_user %>
          <%= link_to root_path, class: "btn-header" do %>
            <i class="fas fa-user"></i> <!-- FontAwesome icon -->
            <span class="block mt-1 text-sm">Profile</span> <!-- Link title -->
          <% end %>
          <%= link_to root_path, class: "btn-header" do %>
            <i class="fas fa-heart"></i> <!-- FontAwesome icon -->
            <span class="block mt-1 text-sm">Wishlist</span> <!-- Link title -->
          <% end %>
          <%= link_to root_path, class: "btn-header" do %>
            <i class="fas fa-shopping-cart"></i> <!-- FontAwesome icon -->
            <span class="block mt-1 text-sm">Cart</span> <!-- Link title -->
          <% end %>
          <%= link_to logout_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn-header" do %>
            <i class="fas fa-sign-out-alt fa-lg"></i>
            <span class="block mt-1 text-sm">Logout</span>
          <% end %>
        <% else %>
          <%= link_to new_session_path, class: "btn-header" do %>
            <i class="fas fa-sign-in-alt fa-lg"></i>
            <span class="block mt-1 text-sm">Login</span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</header>
