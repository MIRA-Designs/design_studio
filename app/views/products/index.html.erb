<p class="text-green-600 font-semibold"><%= notice %></p>

<% content_for :title, "Products" %>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold text-gray-800">Products</h1>
  <%= link_to "âž• New Product",
              new_product_path,
              class: "btn-new" %>

</div>

<% if @products.any? %>
  <div id="products" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @products.each do |product| %>
      <div class="bg-white shadow-md rounded-lg p-4 border border-gray-200 hover:bg-orange-100">
        <%= link_to(product) do %>
          <%= render product %>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center text-gray-500 text-lg mt-10">
    No products found.
  </div>
<% end %>

<div class="pag-bar mt-5 pt-5">
  <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>