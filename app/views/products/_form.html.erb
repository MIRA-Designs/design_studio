<%= form_with(model: product, class: "max-w-2xl mx-auto bg-white p-6 rounded-lg shadow-lg border border-gray-200 animate-fade-in") do |form| %>

  <% if product.errors.any? %>
    <div class="mb-4 p-4 border-l-4 border-red-500 bg-red-50 text-red-700 rounded-lg shadow-md animate-shake opacity-100 transition-all duration-300">
      <h2 class="font-semibold"><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul class="mt-2 list-disc pl-5">
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Title -->
  <div class="mb-4 animate-fade-in-up">
    <%= form.label :title, "Title", class: "block font-medium text-gray-700" %>
    <%= form.text_field :title, class: "w-full mt-1 px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-orange-400 focus:border-orange-400 transition duration-200 transform hover:scale-105" %>
  </div>

  <!-- Description -->
  <div class="mb-4 animate-fade-in-up">
    <%= form.label :description, "Description", class: "block font-medium text-gray-700" %>
    <%= form.rich_text_area :description, class: "w-full mt-1 border border-gray-300 rounded-lg p-3 shadow-sm focus:ring-2 focus:ring-orange-400 focus:border-orange-400 transition duration-200 transform hover:scale-105" %>
  </div>

  <!-- Images Upload -->
  <div class="mb-4 animate-fade-in-up">
    <%= form.label :images, "Product Images", class: "block font-medium text-gray-700" %>
    <%= form.file_field :images, multiple: true, class: "block w-full mt-1 cursor-pointer bg-gray-100 rounded-lg border border-gray-300 p-3 shadow-sm transition hover:bg-gray-200 file:bg-orange-500 file:text-white file:px-4 file:py-2 file:border-none file:rounded-md file:cursor-pointer hover:file:bg-orange-600" %>
  </div>

  <!-- Category -->
  <div class="mb-4 animate-fade-in-up">
    <%= form.label :category, "Category", class: "block font-medium text-gray-700" %>
    <%= form.text_field :category, class: "w-full mt-1 px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-orange-400 transition duration-200 transform hover:scale-105" %>
  </div>

  <!-- Color -->
  <div class="mb-4 animate-fade-in-up">
    <%= form.label :color, "Color", class: "block font-medium text-gray-700" %>
    <%= form.text_field :color, class: "w-full mt-1 px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-orange-400 transition duration-200 transform hover:scale-105" %>
  </div>

  <!-- Size -->
  <div class="mb-4 animate-fade-in-up">
    <%= form.label :size, "Size", class: "block font-medium text-gray-700" %>
    <%= form.text_field :size, class: "w-full mt-1 px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-orange-400 transition duration-200 transform hover:scale-105" %>
  </div>

  <!-- MRP -->
  <div class="mb-4 animate-fade-in-up">
    <%= form.label :mrp, "MRP", class: "block font-medium text-gray-700" %>
    <%= form.text_field :mrp, class: "w-full mt-1 px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-orange-400 transition duration-200 transform hover:scale-105" %>
  </div>

  <!-- Discount -->
  <div class="mb-4 animate-fade-in-up">
    <%= form.label :discount, "Discount", class: "block font-medium text-gray-700" %>
    <%= form.text_field :discount, class: "w-full mt-1 px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-orange-400 transition duration-200 transform hover:scale-105" %>
  </div>

  <!-- Rating -->
  <div class="mb-4 animate-fade-in-up">
    <%= form.label :rating, "Rating", class: "block font-medium text-gray-700" %>
    <%= form.text_field :rating, class: "w-full mt-1 px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-orange-400 transition duration-200 transform hover:scale-105" %>
  </div>

  <!-- Submit Button with Gradient & Hover Effect -->
  <div class="mt-6">
    <%= form.submit "Save Product", class: "w-full bg-gradient-to-r from-orange-500 to-orange-400 text-white font-semibold py-3 rounded-lg shadow-md transition-transform transform hover:scale-105 hover:from-orange-600 hover:to-orange-500 duration-300" %>
  </div>

<% end %>
