<%= form_with url: login_path, class: "max-w-sm mx-auto p-4" do |f| %>
  <div>
    <%= f.label :email, class: "block text-sm font-medium" %>
    <%= f.email_field :email, class: "mt-1 w-full rounded-lg" %>
  </div>
  <div>
    <%= f.label :password, class: "block text-sm font-medium" %>
    <%= f.password_field :password, class: "mt-1 w-full rounded-lg" %>
  </div>
  <div class="mt-4">
    <%= f.submit "Log In", class: "w-full py-2 rounded-lg bg-orange-400 text-white cursor-pointer" %>
  </div>
<% end %>